<% if current_user.nil? %>
<%= fa_icon "star-o",class: "star" %> 
<% else %>
<% if current_user.already_favorited?(@rain) %>
<%= link_to product_favorites_path(rain_id: @rain), method: :delete, remote: true do %>
<%= fa_icon "star",class: "star" %>
<% end %>
<% else %>
<%= link_to product_favorites_path(rain_id: @rain), method: :post, remote: true do %>
<%= fa_icon "star-o",class: "star-o" %>
<% end %>
<% end %>
<% end %>
 