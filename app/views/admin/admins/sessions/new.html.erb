<div class="container"> <!-- ここを追加 -->
    <div class="row">
      <div class="log-in">
        <h2 class="log-in-heading">
        Log in</h2>
<%= form_for(resource, as: resource_name, url:new_admin_session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="log-in-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

</div>